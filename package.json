{
  "name": "paytsek",
  "version": "1.0.0",
  "description": "Payroll system",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": "14.15.1"
  },
  "scripts": {
    "test:api": "jest --runInBand",
    "test:client": "npm test --prefix client",
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm start --prefix client",
    "lint:client": "npm run lint --prefix client",
    "lint:client:fix": "npm run lint:fix --prefix client",
    "lint:server": "eslint controllers middleware models routes test utils app.js index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "client"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "client/src/*.*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paytsek/app.git"
  },
  "keywords": [
    "Payroll"
  ],
  "author": "Fullsuite",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/paytsek/app/issues"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.1",
    "express-rate-limit": "^5.2.3",
    "helmet": "^4.3.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.9",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "slugify": "^1.4.6",
    "validator": "^13.5.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "jest": "^26.6.0",
    "mongodb-memory-server": "^6.9.2",
    "supertest": "^6.0.1"
  }
}
